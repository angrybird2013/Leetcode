class Solution:
    # @param start, a string
    # @param end, a string
    # @param dict, a set of string
    # @return an integer
    def search(self, w, dict, next):
        n = len(w)
        c = [chr(i) for i in range(ord('a'), ord('z') + 1)]
        for i in range(n):
            t = w[i]
            for j in c:
                if j != t:
                    v = w[:i] + j + w[i+1:]
                    if v in dict:
                        next.add(v)
    
    def ladderLength(self, start, end, dict):
        next, step = {start}, 1
        while len(next) > 0:
            s = next
            dict = dict.difference(next)
            next = set()
            for w in s:
                if w == end:
                    return step
                else:
                    self.search(w, dict, next)
            step += 1
        return 0
